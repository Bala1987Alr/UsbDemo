<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/qr_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="输入地址"
            android:text="dev/ttyXRUSB2"
            android:layout_height="45dp" />
        <EditText
            android:id="@+id/qr_btl"
            android:hint="输入波特率"
            android:text="115200"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/qr_open"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="开启"
            android:layout_height="45dp" />
        <Button
            android:id="@+id/qr_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="关闭"
            android:layout_height="45dp" />
        <Button
            android:id="@+id/qr_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="清屏"
            android:layout_height="45dp" />
        <CheckBox
            android:id="@+id/qr_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="保存"
            android:layout_height="45dp" />
    </LinearLayout>
        <TextView
            android:id="@+id/qr_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="200"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="补光灯测试"
        android:layout_height="45dp" />
    <CheckBox
        android:id="@+id/checkbox_buguangdeng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


</LinearLayout>