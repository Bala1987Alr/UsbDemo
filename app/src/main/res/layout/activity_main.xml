<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/qr_address"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Address"
            android:text="dev/ttyXRUSB2" />

        <EditText
            android:id="@+id/qr_btl"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Baud rate"
            android:text="115200" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/qr_open"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Open" />

        <Button
            android:id="@+id/qr_close"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Close" />

        <Button
            android:id="@+id/qr_clear"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Clear" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data type" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/qr_save_onoff"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="On/Off" />
        <CheckBox
            android:id="@+id/qr_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="UTF-8"
            android:layout_height="45dp" />
        <CheckBox
            android:id="@+id/qr_save_hex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="HEX"
            android:layout_height="45dp" />
        <CheckBox
            android:id="@+id/qr_save_byte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="BYTE"
            android:layout_height="45dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer data" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/qr_auto_send"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Auto Send" />
        <CheckBox
            android:id="@+id/qr_auto_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="500"
            android:layout_height="45dp" />
        <CheckBox
            android:id="@+id/qr_auto_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1000"
            android:layout_height="45dp" />
        <CheckBox
            android:id="@+id/qr_auto_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2000"
            android:layout_height="45dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Light test" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_buguangdeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill Light" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Data Received" />
        <TextView
            android:id="@+id/qr_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="200"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Send" />

    <EditText
        android:id="@+id/qr_send_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:hint="Enter text to be sent"
        android:scrollbarFadeDuration="200"
        android:scrollbars="vertical" />
</LinearLayout>
</LinearLayout>